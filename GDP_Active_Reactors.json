{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "GDP Per capita and Number of Active Nuclear Reactors",
      "subtitle": [ 
        "per 100 000 people (as of 2020); Source: Trading Economics, Wikipedia, Worldometer"
      ],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "data": {
      "url": "https://raw.githubusercontent.com/AlexMatulay/AlexMatulay.github.io/main/GDP_and_nuclear.csv",
      "format": {"type": "csv"}
    },
    "mark": {"type": "point", "opacity": 1},
    "height": 300,
    "width": 300,
    "background": null,
    "config": {"style": {"cell": {"stroke": "transparent"}}},
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal",
        "axis": {"grid": false, "labelAngle":45},
        "title": "Number of active nuclear reactors per 100 000 people by country"
      },
      "y": {
        "field": "GDP per capita",
        "type": "quantitative",
        
        "axis": {"grid": false},
        "title": "GDP per capita in USD"
      },
      "size": {
        "field": "Reactors per",
        "type": "quantitative",
        "scale": {"range": [500, 8000]},
        "title": "Number of Active reactors per 100 000 people",
      
        "legend": null
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {
          "field": "GDP per capita",
          "type": "quantitative",
          "title": "GDP per capita in USD"
        },
        {
          "field": "Active Reactors",
          "type": "quantitative",
          "title": "Number of Active Nuclear Reactors"
          
        },
        {
          "field": "Reactors per",
          "type": "quantitative",
          "title": "Number of Active Nuclear Reactors per 100 000 people"
          
        }
      ]
    }
  }